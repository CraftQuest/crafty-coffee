{# Product Listing Template #}
{% extends "_layouts/main" %}

{% block main %}

    <div class="full-bleed-header"
         style="background-size: 100%; height: 200px; background-image: linear-gradient(rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0.25)), url(/images/coffee-shop.jpg); background-repeat: no-repeat, repeat;">
        <div class="page-title text-center">
            <h2 class="logo"><span class="scripty">Crafty Supplies</h2>
        </div>
    </div>

    <div class="row">
        <div class="intro">
            <div class="large-12 small-12 columns">
                <div class="large-6 small-12 columns">
                    <p>
                    </p>
                </div>
            </div>
        </div>
        <ul class="small-block-grid-1 large-block-grid-3 medium-block-grid-2 store-product-grid">
        {% set products = craft.products.type('supplies').limit(10).all() %}
        {% for product in products %}
            <li>
                <a href="{{ product.url }}">
                    <img src="{{ product.productImage.one().getUrl('productListing') }}" alt="{{ product.title }}">
                    <h5>{{ product.title }}</h5>
                    <p>{{ product.defaultPrice | currency('USD') }}</p>
                </a>
            </li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}